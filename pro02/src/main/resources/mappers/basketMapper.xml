<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.starbucks.per.BasketMapper">
	<select id="getTotalCount" resultType="int">
		select count(*) from basket
	</select>	
	<select id="getBasketList" resultType="com.starbucks.domain.Basket">
		select * from basket
	</select>	
	<select id="getBasket" resultType="com.starbucks.domain.Basket">
		select * from basket where bno=#{bno}
	</select>	
	<insert id="insBasket">
		insert into basket(id, amount, remark)
		values (#{id}, #{amount}, #{remark})
	</insert>
	<update id="upBasket">
	    UPDATE basket
	    SET amount = #{amount}
	    WHERE bno = #{bno};
	</update>
	<delete id="delBasket">
		delete from basket where bno=#{bno}
	</delete>
	<update id="vcntBasket">
	    UPDATE basket
	    SET vcnt = vcnt + 1
	    WHERE bno = #{bno};
	</update>
</mapper>